                <db.driverClassName>com.mysql.cj.jdbc.Driver</db.driverClassName>
                <db.url>jdbc:mysql://localhost:3306/banksystem?serverTimezone=UTC</db.url>
                <db.username>root</db.username>
                <db.password>maloi-26</db.password>
                <import.path>import.json</import.path>
                <export.filename>export.json</export.filename>
                <jwt.header>Authorization</jwt.header>
                <security.secretKey>intexsoft</security.secretKey>
                <security.expirationToken>604800</security.expirationToken>
            </properties>
        </profile>
        <profile>
            <id>devRM</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <db.driverClassName>com.mysql.cj.jdbc.Driver</db.driverClassName>
                <db.url>jdbc:mysql://live01:3306/prod</db.url>
                <db.username>mkyong</db.username>
                <db.password>8d969eef6ecad3c29a3a629280e686cf0c3f5d5a86aff3ca12020c923adc6c92</db.password>
